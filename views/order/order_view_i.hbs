            Powered & Designed By Bloom Stores
            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            Powered & Designed By Bloom Stores
        </marquee>
    </div>
    <div class="bl-product">
        <div class="product-img">
        
            <img src="../{{bl_product_image}}" alt="" width="300" height="250">
        </div>
        <div class="product-d">
            <h4> #{{bl_id}}</h4><br>
            <br>
            <h3> Product Name : {{bl_product}}</h3><br><br>
            <h3>Quantity : X <span id="h-q">{{bl_q}}</span></h3><br>
           Payment : {{bl_mode}} <br><br>
            <h4>Total :  â‚¹{{total_price}} &nbsp;&nbsp;&nbsp;
            </h4><br><br>
            <span id="span-status">{{bl_status}}</span>
           <br> <br>
<br><h2>Order Details : </h2><br>
            <img width="24" height="24" src="https://img.icons8.com/ios-filled/50/men-age-group-4.png" alt="Customer : "/> {{bl_customer}}  <br><br>
<img width="24" height="24" src="https://img.icons8.com/ios-filled/50/truck.png" alt="Address : "/> 
{{bl_address}} , {{bl_state}} - {{bl_pin}} - {{bl_landmark}}
            <br><br><img width="24" height="24" src="https://img.icons8.com/ios-filled/50/phone.png" alt="Phone :"/> {{bl_phone}}
<br><br>
            <img width="24" height="24" src="https://img.icons8.com/ios-filled/50/card-in-use.png" alt="Mode of Payment : "/>{{bl_mode}}
            <br><br>
           <div class="form" id="form-btn">
             <form action="/order/cancel/{{bl_id}}" method="post" id="form-cancel">
            <button type="submit" id="cancel-oder">Cancel Order</button></form>
            <form action="/order/delivered/{{bl_id}}" method="post" id="form-dei">
            <button type="submit" id="deli-order">Order Delivered</button></form>
           </div>
        </div>
    </div><br><br><br>
