</body>
<script>
    if(document.getElementById('span-status').innerText=='Pending'){

    document.getElementById('span-status').style.color='orange'
    }
    if(document.getElementById('span-status').innerText=='Delivered'){
    document.getElementById('span-status').style.color='green'
    document.getElementById('form-btn').style.display='none'
    }
    if(document.getElementById('span-status').innerText=='Cancelled'){
    document.getElementById('span-status').style.color='red'
    document.getElementById('form-btn').style.display='none'

    }
    window.addEventListener('load',()=>{
        document.getElementById('loader').style.display='none'
        document.getElementById('body-main').style.display='block'
       
    })
</script>
</html>