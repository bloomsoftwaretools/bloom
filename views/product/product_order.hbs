<script>
    window.addEventListener('load',()=>{
        document.getElementById('loader').style.display='none'
        document.getElementById('body-main').style.display='block'
    })


document.getElementById('form=sub=order').addEventListener('submit',(e)=>{
var phone=document.getElementById('cus-phone').value
var pin=document.getElementById('cus-pin').value
var state=document.getElementById('state').value

if(phone.length!=10){
e.preventDefault()
document.getElementById('form-valid').style.display='block'
document.getElementById('form-valid').innerText='Invalid Phone Number'

}
else if(pin.length>6 || pin.length<6){
e.preventDefault()
document.getElementById('form-valid').style.display='block'
document.getElementById('form-valid').innerText='Invalid Pincode'

}
else if(state=='State'){
    e.preventDefault()
document.getElementById('form-valid').style.display='block'
document.getElementById('form-valid').innerText='State is required'

}
else
{window.reload()
    document.getElementById('form-valid').style.display='none'
    
}
})
</script>
